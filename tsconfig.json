{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true, 
        "noEmitOnError": true
    }
}